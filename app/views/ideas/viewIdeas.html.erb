<% content_for :title, "IdeaWick / #{@site.title}" %>
<div style="width:90%;">
	<table>
		<tr>
			<td>
				<h2><%=@site.title%></h2>
			</td>
			<td style="width:5%;">
				<a href="https://twitter.com/share" class="twitter-share-button" data-count="none">Tweet</a>
			</td>
		</tr>
	</table>
	<hr/>
	<table class = "table" style="border-style:none;">
		<tr>
				<% if current_user %>
					<td style="width:50px;padding-top:12px;border-style:none;">
						<img src="<%=current_user.imageUrl%>">
					</td>
					<td style="border-style:none;">
						<%= render :partial => '/ideas/form' %>
					</td>
				<% else %>
					<span class="medium_font">Have an idea?  Sign in real quick to share!</span> 
					<div style="height:25px; padding:25px 0;">
						<%= render '/layouts/sign_in_out_panel', :show_links_only => false  %> 
				<% end %>
		</tr>
	</table>
	<div id="ideaContainer">
		<%= render :partial => 'ideaPanel' %>
	</div>
	<%= paginate @ideas %>
</div>

<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
<%= render :partial => 'layouts/layout_top' %>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
          <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
					<% root_host = ENV['IW_ROOT_SUBDOMAIN'] + '.' + request.domain %>
        	<%= link_to "IdeaWick", root_url(:host => root_host), :class => "brand" %>
          <div class="container nav-collapse">
			<ul class="nav pull-right">
			  <li>
			  </li>
			</ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
		<div class="subheader">
			<div style="float:left">
				<%= link_to "Home", root_path %>
			</div>
			<div style="float:right;">
				<% if  @render_sign_in_out_panel != false %>
					<%= render '/layouts/sign_in_out_panel', :show_links_only => true %>
				<% end %>
			</div>
		</div>
      <div class="content">
        <div class="row">
           <div class="span9">
							<% if flash[:notice] %>
						  	<p class="flash-notice"><%= flash[:notice] %></p>
							<% end %>
              <%= yield %>
            </div>
            	<div class="span3">
	              <div class="well sidebar-nav">
	                <h3>
						<% if current_user %>
							<% if current_user.firstName %>
								<%= current_user.firstName%>&nbsp;<%= current_user.lastName%>
							<% else %>
								<%= current_user.fullName%>
							<% end %>
							<span style="margin:20px;">
								<img src="<%=current_user.imageUrl%>"/>
							</span>
						<% else %>
							Guest User
						<% end %>
					</h3>
	                <ul class="nav nav-list">
	                  <li class="nav-header">Sites</li>
	                  <li><%= link_to "View My Sites", sites_path %></li>
					  <li><%= link_to "Create Site", new_site_path %></li>
	                </ul>
	                <ul class="nav nav-list">
	                  <li class="nav-header">Ideas</li>
	                  <li><%= link_to "View My Ideas", ideas_path %></li>
	                </ul>
	              </div><!--/.well -->
	            </div><!--/span-->
        </div><!--/row-->
      </div><!--/content-->
    </div> <!-- /container -->
<%= render :partial => 'layouts/layout_bottom' %>